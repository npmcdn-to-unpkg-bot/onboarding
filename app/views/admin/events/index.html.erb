<h1>Events</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Url</th>
      <th>Date</th>
      <th>Location</th>
      <th>Instructions</th>
      <th>Contact</th>
      <th>User</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= image_tag event.image.url(:thumb) %></td>
        <td><%= event.url %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td><%= event.instructions %></td>
        <td><%= event.contact %></td>
        <td><%= event.user.email %></td>
        <td><%= link_to 'Show', admin_event_path(event) %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_admin_event_path, class: 'btn btn-primary' %>
