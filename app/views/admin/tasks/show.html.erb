<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>

<p>
  <strong>Task manager url:</strong>
  <%= @task.task_manager_url %>
</p>

<p>
  <strong>Task type:</strong>
  <%= @task.task_type_humanize %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @task.image.url(:medium) %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status_humanize %>
</p>

<p>
  <strong>Location:</strong>
  <%= @task.location %>
</p>

<p>
  <strong>Campaigns:</strong>
  <ul>
  <% @task.campaigns.each do |campaign| %>
      <li><%= link_to campaign.name, [:admin, campaign] %></li>
  <% end %>
  </ul>
</p>

<p>
  <strong>Events:</strong>
  <ul>
  <% @task.events.each do |event| %>
      <li><%= link_to event.name, [:admin, event] %></li>
  <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_admin_task_path(@task), class: 'bttn bttn-primary' %>
<%= link_to 'Back', admin_tasks_path, class: 'bttn bttn-secondary' %>
